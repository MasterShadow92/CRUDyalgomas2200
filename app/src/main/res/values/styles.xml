<resources>

    <!-- Colores -->
    <color name="colorPrimary">#3F51B5</color>
    <color name="colorPrimaryDark">#303F9F</color>
    <color name="colorAccent">#FF4081</color>

    <!-- Estilo de la aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Color primario para la barra de acción y la barra de estado -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Color de la barra de acción -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Color de fondo de la barra de acción -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Windows98AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/ww</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
        <!-- Agrega más estilos según sea necesario -->
    </style>

    <style name="WindowTitleStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#C0C0C0</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Otros estilos -->
</resources>
