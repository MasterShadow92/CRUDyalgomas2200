<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d"
    tools:context=".SecondActivity">

    <EditText
        android:id="@+id/numeroEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Adivina el número"
        android:inputType="number"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/adivinarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numeroEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Adivinar" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adivinarButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
    android:id="@+id/abrirOtraPantallaButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/googleMapsButton"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:text="Mapa" />

    <ImageView
        android:id="@+id/felicitacionesImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="-41dp"
        android:layout_marginEnd="23dp"
        android:src="@drawable/armorking"
        android:visibility="invisible" />

    <Button
        android:id="@+id/virginioGomezButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/felicitacionesImageView"
        android:layout_alignEnd="@+id/felicitacionesImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="76dp"
        android:text="Virginio Gómez" />

    <Button
        android:id="@+id/googleMapsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/virginioGomezButton"
        android:layout_alignEnd="@+id/felicitacionesImageView"
        android:layout_alignBottom="@+id/felicitacionesImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="213dp"
        android:text="Mapa Web" />
    <Button
        android:id="@+id/openGalleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abrirOtraPantallaButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Abrir Galería" />


    <Button
        android:id="@+id/salirButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/openGalleryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Salir" />



</RelativeLayout>
